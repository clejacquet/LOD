SELECT DISTINCT ?name ?author ?author_name ?abstract ?date
WHERE {
    ?resource a ?resource_type;
              ?title_property ?name;
              ?author_property ?author;
              ?abstract_property ?abstract .

    ?author ?author_name_property ?author_name .

    OPTIONAL {
        ?resource ?date_property ?date .
    }

    FILTER LANGMATCHES(LANG(?abstract), ?language)
    FILTER LANGMATCHES(LANG(?author_name), ?language)
    FILTER LANGMATCHES(LANG(?name), ?language)
}